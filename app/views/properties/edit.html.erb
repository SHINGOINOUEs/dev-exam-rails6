<h1>物件登録</h1>
<%= form_with(model: @property, local: true) do |f| %>
  <%= f.label :property, '物件名' %><br>
  <%= f.text_field :property %><br>
  <%= f.label :rent, '賃料' %><br>
  <%= f.text_field :rent %>円<br>
  <%= f.label :address, '住所' %><br>
  <%= f.text_field :address %><br>
  <%= f.label :age, '築年数' %><br>
  <%= f.text_field :age %>年<br>
  <%= f.label :remarks, '備考' %><br>
  <%= f.text_area :remarks %><br>

  <hr>

  <h4>最寄り駅1</h4>
  <%= f.fields_for :access1 do |ns1| %>
    <%= ns1.label :line, '路線名' %><br>
    <%= ns1.text_field :line %><br>
    <%= ns1.label :station, '駅名' %><br>
    <%= ns1.text_field :station %><br>
    <%= ns1.label :distance, '徒歩分数' %><br>
    <%= ns1.text_field :distance %>分<br>
  <% end %>

  <h4>最寄り駅2</h4>
  <%= f.fields_for :access2 do |ns2| %>
    <%= ns2.label :line, '路線名' %><br>
    <%= ns2.text_field :line %><br>
    <%= ns2.label :station, '駅名' %><br>
    <%= ns2.text_field :station %><br>
    <%= ns2.label :distance, '徒歩分数' %><br>
    <%= ns2.text_field :distance %>分<br>
  <% end %>
  <%= f.submit '登録する' %><br>
<% end %>
<%= link_to '戻る', properties_path %>